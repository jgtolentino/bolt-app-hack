# Scout Dashboard v4.0 Environment Configuration

# Backend type: sqlite|supabase|postgres
VITE_BACKEND_TYPE=sqlite

# Supabase Configuration (if using Supabase)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# PostgreSQL Configuration (if using custom PostgreSQL)
VITE_POSTGRES_URL=postgresql://user:password@host:5432/database

# SQLite Configuration (if using local SQLite)
VITE_MCP_SERVER_URL=http://localhost:3000

# Optional Features
VITE_ENABLE_REALTIME=false
VITE_ENABLE_AUTH=false
VITE_MAPBOX_TOKEN=pk.your-mapbox-token-here

# Application Configuration
VITE_APP_TITLE=Scout Dashboard v4.0
VITE_APP_SUBTITLE=Philippine Sari-Sari Store Analytics
VITE_PRIMARY_COLOR=#1e40af
VITE_DEFAULT_REGION=NCR